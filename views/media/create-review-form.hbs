<form action="/peliculas/{{movieId.id}}/create-review" method="POST">


    <div class="form-group">
        <label for="Stars">Selecciona un rating:</label>
        <select multiple class="form-control" id="Stars" name="rating">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </div>
    <div class="form-group">
        <label for="reviewArea">Escribe tu review:</label>
        <textarea class="form-control" id="reviewArea" rows="3" name="text"></textarea>
    </div>

    <input type="text" value="{{movieId.id}}" name="movieId">
    <input type="text" value="{{currentUser._id}}" name="userId">

    <button type="submit" class="btn btn-primary">Enviar review</button>
</form>